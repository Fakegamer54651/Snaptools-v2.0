{
  "manifest_version": 3,
  "name": "SnapTools Minimal",
  "version": "2.0.0",
  "description": "Lightweight SnapTools Gmail helper",
  "permissions": ["storage"],
  "host_permissions": ["https://mail.google.com/*"],
  "background": {
    "service_worker": "background/index.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content/index.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
{
  "manifest_version": 3,
  "name": "SnapTools Minimal",
  "version": "2.0.0",
  "description": "Lightweight SnapTools Gmail helper",
  "permissions": ["storage", "windows", "tabs"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://*.googleusercontent.com/*",
    "https://cdnjs.cloudflare.com/*"
  ],
  "background": {
    "service_worker": "background/index.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content/injector.js"],
      "run_at": "document_idle",
      "type": "module",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/pdfsign/pdf.min.js",
        "content/pdfsign/overlayViewer.js",
        "content/pdfsign/pdf.worker.min.js",
        "vendor/pdf.min.js",
        "vendor/pdf.worker.min.js"
      ],
      "matches": [
        "https://mail.google.com/*",
        "https://*.googleusercontent.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}

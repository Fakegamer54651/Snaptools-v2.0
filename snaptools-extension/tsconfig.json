{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "None",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "removeComments": true,
    "noEmitHelpers": false,
    "newLine": "lf",
    "skipLibCheck": true,
    "types": ["chrome"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}